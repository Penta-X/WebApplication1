@model WebApplication1.Models.Classes.Blog
@{
    ViewBag.Title = "GetBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Blogs</h2>
<br />
@using (Html.BeginForm("BlogUpdate", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly"})
    <br />
    @Html.LabelFor(x => x.title)
    @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.date)
    @Html.TextBoxFor(x => x.date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.image)
    @Html.TextBoxFor(x => x.image, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.content)
    @Html.TextAreaFor(x => x.content,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update</button>
}
